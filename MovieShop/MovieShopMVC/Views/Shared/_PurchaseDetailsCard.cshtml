  @model ApplicationCore.Models.PurchaseDetailsResponseModel

<div class="row justify-content-center">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Purchase Details</h5>
            <div class="row">
                <div class="col-2">
                    <img src="@Model.PosterUrl"/>
                </div>
                <div class="col-10">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            Purchase Date: @Model.PurchaseDateTime
                        </li>
                        <li class="list-group-item">
                            Price: @Model.TotalPrice
                        </li>
                        <li class="list-group-item">
                            Purchase Number: @Model.PurchaseNumber
                        </li>
                    </ul>
                </div>
            </div>
         
        </div>
    </div>
</div>
